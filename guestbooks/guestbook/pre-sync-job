apiVersion: batch/v1
kind: Job
metadata:
  generateName: wait-rollout-controller-to-pick-changes-
  annotations:
    argocd.argoproj.io/hook: Sync
    argocd.argoproj.io/sync-wave: "2" # last wave of sync phase
spec:
  template:
    spec:
      containers:
      - name: sleep
        image: alpine:latest
        command: ["sleep", "120"] # some average time that are now needed for rollout controller to pick the changes
      restartPolicy: Never
  backoffLimit: 0